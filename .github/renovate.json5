{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "docker:enableMajor",
    ":disableRateLimiting",
    ":dependencyDashboard",
    ":semanticCommits",
    ":automergeDigest",
    ":automergeBranch",
    "github>ullbergm/openshift//.github/renovate/allowedVersions.json5",
    "github>ullbergm/openshift//.github/renovate/autoMerge.json5",
    "github>ullbergm/openshift//.github/renovate/commitMessage.json5",
    "github>ullbergm/openshift//.github/renovate/groups.json5",
    "github>ullbergm/openshift//.github/renovate/labels.json5",
    "github>ullbergm/openshift//.github/renovate/semanticCommits.json5",
    "helpers:pinGitHubActionDigests"
  ],
  "dependencyDashboardTitle": "Renovate Dashboard",
  "suppressNotifications": ["prIgnoreNotification"],
  "ignorePaths": ["**/archive/**"],
  "timezone": "America/New_York",
  "helm-values": {
    "fileMatch": ["(^|/)(charts|deploy)/.+\\.ya?ml(\\.j2)?$"]
  },
  "kubernetes": {
    "fileMatch": [
      "(^|/)\\.taskfiles/.+\\.ya?ml(\\.j2)?$",
      "(^|/)ansible/.+\\.ya?ml(\\.j2)?$",
      "(^|/)charts/.+\\.ya?ml(\\.j2)?$",
      "(^|/)deploy/.+\\.ya?ml(\\.j2)?$"
    ]
  },
  "regexManagers": [
    {
      "description": "Process raw GitHub URLs",
      "fileMatch": ["kubernetes/.+\\.ya?ml$"],
      "matchStrings": [
        "https:\\/\\/raw.githubusercontent.com\\/(?<depName>[\\w\\d\\-_]+\\/[\\w\\d\\-_]+)\\/(?<currentValue>[\\w\\d\\.\\-_]+)\\/.*"
      ],
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver"
    },
    {
        - name: app-template.controllers.main.containers.main.image.repository
          value: ghcr.io/onedr0p/tautulli
        - name: app-template.controllers.main.containers.main.image.tag
          value: 2.13.4
      "description": "Process custom helm chart values",
      "fileMatch": [".+\\.ya?ml$"],
      "matchStrings": [
        "- name: app-template.controllers.main.containers.main.image.repository$.*value: (?<depName>.+)$.*- name: app-template.controllers.main.containers.main.image.tag$.*value: (?<currentValue>[\\d\\.]+)$"
      ],
      "datasourceTemplate": "custom-docker",
      "versioningTemplate": "semver"
    }
  ],
  "packageRules": [
    {
      "description": "Loose versioning for non-semver packages",
      "matchDatasources": ["docker"],
      "versioning": "loose",
      "matchPackagePatterns": ["changedetection", "plex", "qbittorrent"]
    }
  ]
}
